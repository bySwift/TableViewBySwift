# Uncomment the next line to define a global platform for your project
platform :ios, '9.0'

target 'TableViewBySwift' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for TableViewBySwift
    # 布局
    pod 'SnapKit'
    # 颜色
    pod 'DynamicColor'
    # 颜色渐变
    pod 'Hue'
    # font,image,color(assets named colors),xib
    pod 'R.swift'
    # 网络请求
    pod 'Alamofire-SwiftyJSON'
    # json 转 model
    pod 'HandyJSON'
    # 上下拉刷新
    pod 'ESPullToRefresh'
    # js 交互
    pod 'WKWebViewJavascriptBridge'
    # webViewController
    # todo
    # page vc
    pod 'PagingKit'
    # segment
    pod 'Segmentio'
    # rac
    pod 'RxSwift'
    pod 'ReactiveSwift'
    # web image
    pod 'SDWebImage'
    pod 'Kingfisher'
    # hud
    pod 'PKHUD'
    # keyboardmanager
    pod 'IQKeyboardManagerSwift'
    # charts
    pod 'Charts'
    # animations
    pod 'Spring'
    
    # 第三方
    pod 'Bugly'
    pod 'JPush'
    
  target 'TableViewBySwiftTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'TableViewBySwiftUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
